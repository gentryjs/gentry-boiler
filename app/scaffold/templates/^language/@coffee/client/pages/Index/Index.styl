.content
  .add-item
    padding 10px
    border 1px solid #efefef
    width 100%
    background #fafafa
  .clear-all
    cursor pointer
  .items
    position relative
    width 100%
    text-align center
    display inline-block
    .item
      position relative
      width 100%
      height 35px
      background #fafafa
      padding 10px
      margin-top 5px
      .checkbox
        position absolute
        left 10px
      .remove
        position absolute
        right 10px
        color red
      .done
        text-decoration line-through
